- path: /etc/modules-load.d/bridge.conf
  permissions: '0644'
  content: |
    br_netfilter

- path: /etc/sysctl.d/10-kubernetes.conf
  permissions: '0644'
  content: |
    net.ipv4.ip_forward=1
    net.bridge.bridge-nf-call-iptables=1
    net.bridge.bridge-nf-call-arptables=1

- path: /etc/docker/daemon.json
  permissions: '0644'
  content: |
